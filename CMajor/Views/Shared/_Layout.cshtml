<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>@ViewBag.Title</title>
  <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
  <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
  @MvcMiniProfiler.MiniProfiler.RenderIncludes()
</head>
<body>
  <div class="container">
    <div id="header">
      <div id="header-logo">
        <a href="/" title="CMajor">CMajor</a>
      </div>
      <div id="header-nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="@Url.Action("Index", "Songs")">Songs</a></li>
          <li><a href="@Url.Action("Index", "Albums")">Albums</a></li>
          <li><a href="@Url.Action("Index", "Artists")">Artists</a></li>
          <li><a href="@Url.Action("About", "Home")">About</a></li>
        </ul>
      </div>
    </div>
    <hr />
    <div id="content">
      <div class="row">
        <div class="span8">
          <div>
            <form class="well form-search">
            <input type="text" class="span5" placeholder="Search lyrics, albums and artists.." />
            <button type="submit" class="btn btn-large btn-inverse">
              <i class="icon-white icon-search"></i>
            </button>
            </form>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span8">
          <div>
            @RenderBody()
          </div>
        </div>
        <div class="sidebar span3 offset1">
          <div>
            <h2>
              Albums</h2>
            <ul class="albums">
              <li><i class="icon-book"></i><a href="/Albums/1">ခဏေလးမ်ား </a><span>(10)</span></li>
              <li><i class="icon-book"></i><a href="/Albums/1">ခဏေလးမ်ား </a><span>(10)</span></li>
              <li><i class="icon-book"></i><a href="/Albums/1">ခဏေလးမ်ား </a><span>(10)</span></li>
            </ul>
            <hr />
          </div>
          <div>
            <h2>
              Artists</h2>
            <ul class="artists">
              <li><i class="icon-user"></i><a href="/Artists/1">ေလးျဖဴ </a><span>(10)</span></li>
              <li><i class="icon-user"></i><a href="/Artists/1">ေလးျဖဴ </a><span>(10)</span></li>
              <li><i class="icon-user"></i><a href="/Artists/1">ေလးျဖဴ </a><span>(10)</span></li>
            </ul>
            <hr />
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
